-unless general_causas.count<1
	.row
		.col-md-12
			.grid.simple.can-collapse
				.grid-title
					%h4.semi-bold Causas
					.tools
						%a.marg-t-10.collapse
				.grid-body
					%table.table
						%thead
							%tr
								%th RIT
								%th RUC
								%th Caratulado
								%th Tribunal
						%tbody
							-general_causas.each do |d|
								-c=d.causa
								-unless c.nil?
									%tr
										%td
											%span
												=c.identificator
										%td
											%span
												=#c.ruc
										%td
											%span
												=#c.caratulado
										%td
											%span
												=#c.tribunal


