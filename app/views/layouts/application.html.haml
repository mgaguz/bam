!!!
%html{'ng-app' => 'bam'}
  %head
    %meta{:charset => "utf-8"}
    %title Procurador Web - Bam Abogados
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no", :name => "viewport"}
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}

    / Le HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      = javascript_include_tag "https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js", "https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          %button.navbar-toggle{:type => "button", :data => {:toggle => "collapse", :target => ".navbar-collapse"} }
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar

          = link_to "Procurador Web", root_path, :class => "navbar-brand"
        .collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            %li{class: active_class(root_path)}
              = link_to "Home", root_path
            -unless user_signed_in?
              %ul.nav.navbar-nav.navbar-right
                %li
                  = link_to "Login", new_user_session_path
            - else
              - if can? :manage, GeneralCausa
                %li{class: active_class(general_causas_path)}
                  = link_to "Causas", general_causas_path
                %li
                  = link_to "Eº Receptores", "#"
                %li{class: active_class(cortes_path)}
                  = link_to "Eº CA/CS", cortes_path
              - if can? :manage, Client
                %li
                  = link_to "Clientes", clients_path
              %ul.nav.navbar-nav.navbar-right
                %li.dropdown
                  %a.dropdown-toggle{href:'#',"data-toggle"=>'dropdown'}
                    =current_user
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      = link_to 'Perfil', account_path(current_user.account)
                    %li
                      = link_to "Logout", destroy_user_session_path, method: :delete
    #main-container
      .container
        - flash.each do |name, msg|
          = content_tag :div, :class => "alert alert-#{name == :error ? "danger" : "success" } alert-dismissable" do
            %button.close{:type => "button", :data => {:dismiss => "alert"}, :aria => {:hidden => "true"} } &times;
            = msg
        = yield
