.page-header
  %h1 Clientes

= link_to new_client_path, :class => 'btn btn-primary' do
  %span.glyphicon.glyphicon-plus
  Nuevo Cliente

.row
  .col-md-12.my-causas
    .grid.simple.can-collapse
      .grid-body
        %table.table.table-striped.datatable.display.responsive.no-wrap
          %thead
            %tr
              %th Nombre
              %th Apellidos
              %th Rut
              %th Abogado
              -#%th
              %th
              %th
          %tbody
            -@clients.each do |c|

              -unless c.nil?
                %tr
                  %td
                    %span
                      =c.name
                  %td
                    %span
                      =c.lastname
                  %td
                    %span
                      =c.rut
                  %td
                    %span
                      -unless c.account.nil?
                        =c.account.name + c.account.lastname
                  -#%td= link_to 'Show', client
                  %td= link_to 'Editar', edit_client_path(c)
                  %td= link_to 'Destroy', c, :data => { confirm: 'Are you sure?' }, :method => :delete

